<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Game Over"
            android:id="@+id/resultsTitle"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="25sp"
              android:text="Apes: "
              android:id="@+id/firstTeamResultTitle"
              android:layout_gravity="center_horizontal"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="25sp"
              android:text="Hedgehogs: "
              android:id="@+id/secondTeamResultTitle"
              android:layout_marginBottom="20dp"
              android:layout_gravity="center_horizontal"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:src="@drawable/new_banana"
               android:layout_margin="15dp" android:contentDescription="@string/banana_image_description"/>

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@android:string/ok"
            android:id="@+id/okButton"
            android:background="@color/yellow_default"
            android:layout_margin="15dp"/>
</LinearLayout>